

<div class="jumbotron">
  <h1 class="display-3">Create a Contact</h1>

  <form action="/contacts/add" method="GET">
    <div class="form-group">
      <input type="text" name="first_name" placeholder="First name" autofocus required/>
    </div>
    <div class="form-group">
      <input type="text" name="last_name" placeholder="Last name" required/>
    </div>
    <div class="form-group">
      <input type="text" name="email" placeholder="email" required/>
    </div>
    <div class="form-group">
      <input type="text" name="phone" placeholder="phone number" required/>
    </div>
    <hr class="my-4">
    <button type="submit" value="Add contact"  class="btn btn-primary">Add Contact</button>
  </form>
</div>
