  <div class="card text-white bg-secondary mb-3 createcard">
    <h1 class="display-4 createtitle">Create New Contact</h1>
  <form action="/contacts/add" method="GET" class="formcard">
    <div class="form-group">
      <input type="text" name="first_name" placeholder="First name" class="inputi" autofocus required/>
    </div>
    <div class="form-group">
      <input type="text" name="last_name" placeholder="Last name" class="inputi" required/>
    </div>
    <div class="form-group">
      <input type="text" name="email" placeholder="email" class="inputi" required/>
    </div>
    <div class="form-group">
      <input type="text" name="phone" placeholder="phone number" class="inputi" required/>
    </div>
    <hr class="my-4">
    <div class="buttonform">
      <div>
        <button type="submit" value="Add contact"  class="btn btn-primary">Add Contact</button>
      </div>
      <div class="backbutton">
        <%= link_to "Back to List", "/", class: 'btn btn-outline-primary btn-sm' %>
      </div>
    </div>
  </form>
</div>
