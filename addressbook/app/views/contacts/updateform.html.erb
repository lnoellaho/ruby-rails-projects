
<div>
  <h1 class="display-3">Edit</h1>

  <form action="/contacts/update/<%= @contact.id %>" method="GET">
    <div class="form-group">
      <label>First name </label>
      <input type="text" name="first_name" value=<%= @contact.firstname %> required/>
    </div>
    <div class="form-group">
      <label>Last name </label>
      <input type="text" name="last_name" value=<%= @contact.lastname %> required/>
    </div>
    <div class="form-group">
      <label>Email </label>
      <input type="text" name="email" value=<%= @contact.email %> required/>
    </div>
    <div class="form-group">
      <label>Phone </label>
      <input type="text" name="phone" value=<%= @contact.phone %> required/>
    </div>
    <hr class="my-4">
    <button type="submit" value="Update contact"  class="btn btn-primary">Update Contact</button>
  </form>
</div>
